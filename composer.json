{
    "name": "ecommit/paginator",
    "description": "Create a paginator.",
    "keywords": ["paginator", "array"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Hubert Lecorche",
            "email": "contact@e-commit.fr"
        }
    ],
    "autoload": {
        "psr-4": { "Ecommit\\Paginator\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Ecommit\\Paginator\\Tests\\": "tests/" }
    },
    "require": {
        "php": "^8.1",
        "symfony/options-resolver": "^6.4|^7.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^9.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
